#!/usr/bin/env node
var util = require('util'),
    twitter = require('twitter');

var twit = new twitter({
    consumer_key: process.env["NODE_CONSUMER_KEY"],
    consumer_secret: process.env["NODE_CONSUMER_SECRET"],
    access_token_key: process.env["NODE_ACCESS_TOKEN_KEY"],
    access_token_secret: process.env["NODE_ACCESS_TOKEN_SECRET"]
});

twit.verifyCredentials(function(data) {
    console.log(util.inspect(data));
});

var date = new Date();

twit.updateStatus('Test tweet from node-twitter/' + twitter.VERSION + " " + (new Date()).toString(),
                  function(data) {
                      console.log(util.inspect(data));
                  });

twit.get('/statuses/mentions_timeline.json', {include_entities:true}, function(data) {
    console.log(util.inspect(data));
});

